<LinearLayout   
          xmlns:android="http://schemas.android.com/apk/res/android"  
          android:layout_width="fill_parent"  
          android:layout_height="wrap_content"  
          android:orientation="vertical">  
   <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
       android:background="#00a2cf">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:textColor="#fff"
        android:text="详细信息"/> 

   </RelativeLayout>
   <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
     <LinearLayout   
             android:id="@+id/widget205"  
             android:layout_width="fill_parent"  
             android:layout_height="60dp"   
             android:layout_marginLeft="10dp" 
             android:layout_marginRight="10dp"> 
             <ImageButton   
                 android:id="@+id/show_img"  
                 android:layout_width="60dp"  
                 android:layout_height="fill_parent"   
                 android:src="@drawable/head"
                 android:scaleType="centerInside"  >
             </ImageButton>     
             <TextView    
                 android:id="@+id/show_name"   
                 android:layout_width="fill_parent"  
                 android:layout_height="wrap_content"   
                 android:scrollbars="vertical"    
                 android:layout_gravity="center_vertical"
                 android:textSize="30dp" />   
      </LinearLayout>

     <ScrollView
         android:id="@+id/ScrollView01"
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="60dp"
         android:layout_marginBottom="70dp" >

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:orientation="vertical" >

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="18dp"
                 android:text="手机："
                 android:textSize="20dp" />

             <EditText
                 android:id="@+id/mobile_num"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:hint="手机"
                 android:phoneNumber="true" >

                 <requestFocus />
             </EditText>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="18dp"
                 android:text="家庭电话"
                 android:textSize="20dp" />

             <EditText
                 android:id="@+id/family_num"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:hint="家庭电话"
                 android:phoneNumber="true" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="18dp"
                 android:text="公司电话"
                 android:textSize="20dp" />

             <EditText
                 android:id="@+id/office_num"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:hint="公司电话"
                 android:phoneNumber="true" />
              
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="18dp"
                 android:text="住址"
                 android:textSize="20dp" />

             <EditText
                 android:id="@+id/show_addr"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:hint="住址" />
             <TextView    
                  android:layout_height="wrap_content"  
                  android:layout_width="wrap_content"   
                  android:text="群组"  
                   android:layout_marginTop="15dp" 
                  android:textSize="20dp" />  
              <Spinner    
                  android:id="@+id/show_group"  
                  android:layout_width="fill_parent"   
                  android:layout_height="wrap_content"  
                  android:scrollbars="vertical"    
                  android:gravity="top" 
                  android:entries="@array/group" />
         </LinearLayout>
     </ScrollView>
  
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="70dp"
         android:layout_alignParentBottom="true"
         android:background="#00a2ef"
         android:orientation="horizontal" >

         <Button
             android:id="@+id/call"
             android:layout_width="wrap_content"
             android:layout_height="68dp"
             android:layout_marginLeft="5dp"
             android:background="@null"
             android:textColor="#fff"
             android:layout_weight="0.01"
             android:text="呼叫" 
             android:onClick="onClick"/>

         <Button
             android:id="@+id/message"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
              android:background="@null"
             android:textColor="#fff"
             android:layout_weight="0.01"
             android:text="短信" 
             android:onClick="onClick"/>

         <Button
             android:id="@+id/save_edit"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
              android:background="@null"
             android:textColor="#fff"
             android:layout_weight="0.01"
             android:text="保存"
             android:onClick="onClick" />

         <Button
             android:id="@+id/delete"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
              android:background="@null"
             android:textColor="#fff"
             android:layout_weight="0.01"
             android:text="删除" 
              android:onClick="onClick"/>

         <Button
             android:id="@+id/re_back"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
              android:background="@null"
             android:textColor="#fff"
             android:layout_weight="0.01"
             android:text="返回"
             android:onClick="onClick" />

     </LinearLayout>
  </RelativeLayout>
 </LinearLayout>